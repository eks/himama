<h1>TimeEntries</h1>

<%= form_with(model: TimeEntry.new, local: true) do |f| %>
  <%= f.submit %>
<% end %>

<table>
  <thead>
    <th>Day</th>
    <th>Clock In</th>
    <th>Clock Out</th>
    <th>Duration</th>
    <th>In Progress?</th>
  </thead>
  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.day %></td>
        <td><%= entry.start_at %></td>
        <td><%= entry.end_at %></td>
        <td><%= entry.duration %></td>
        <td><%= entry.in_progress? %></td>
      </tr>
    <% end %>
  </tbody>
</table>
